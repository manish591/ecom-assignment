generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  firstname String
  lastname  String
  email     String    @unique
  password  String
  session   Session[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Session {
  id         String   @id @default(cuid())
  token      String   @unique
  user_id    String
  expires_at DateTime

  user User @relation(fields: [user_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
